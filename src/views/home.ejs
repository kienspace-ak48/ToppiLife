<script>
    const video = document.getElementById('myVideo');
    const playBtn = document.getElementById('play-vid');

    playBtn.addEventListener('click', () => {
        // Bắt buộc có tương tác trước khi play để tránh bị chặn
        video
            .play()
            .then(() => {
                playBtn.classList.add('opacity-0'); // ẩn mượt mà
                setTimeout(() => playBtn.classList.add('hidden'), 300);
            })
            .catch((err) => console.log('Không thể phát video:', err));
    });

    // Khi nhấn lại video thì pause + hiện nút
    video.addEventListener('click', () => {
        if (!video.paused) {
            video.pause();
            playBtn.classList.remove('hidden');
            playBtn.classList.remove('opacity-0');
        }
    });
</script>
